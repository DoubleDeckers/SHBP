@{
    ViewBag.Title = "登录";
}

<div class="box login-box with-border">
  <div class="login-box-body">
    <p class="login-box-msg">登录</p>
    <form action="/user/login" method="post">
      <div class="form-group">
        <label>用户名</label>
        <input type="text" class="form-control" name="username" placeholder="请输入您的用户名" />
      </div>
      <div class="form-group">
        <label>密码</label>
        <input type="password" class="form-control" name="password" placeholder="请输入您的登录密码" />
      </div>
      <div class="row">
        <button type="submit" class="btn btn-primary btn-block btn-flat">登录</button>
        <a href="/user/register">
            <button type="button" class="btn btn-primary btn-block btn-flat">注册</button>
        </a>
      </div>
    </form>
  </div>
</div>